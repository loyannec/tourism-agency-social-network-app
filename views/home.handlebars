<div class=homeContainer>
    <p>Welcome <b>{{user.firstName}}</b> to Tourism Agency Social Network</p>

    <form id="searchForm" class="formLocationSearch" method="POST" action="/location/search">
        <input type="text" name= "selectLocation"  placeholder="Search for Locations" title = "Type Location Name">
        <button type="submit" id="getLocations"><i class="fa fa-search"></i>Search</button>
    </form>

    {{#if arrayLocation}}
        <div class="location">
            {{#each arrayLocation}}
                <div class="locationItem">
                    <img src='data:{{this.image.contentType}};base64,{{imageToBase64 this.image.data}}'>
                    <br><br>
                    <p><b><a href="/location/{{this._id}}"> {{this.name}} </a></b> </p>
                    <p>{{ truncate this.description 150}}</p>
                    <!-- LIKES -->
                    <div class="card-footer d-flex justify-content-center align-items-center">
                        <span id="likes-count" class="ml-1 mr-3">"ğŸ‘ğŸ» :"{{this.likes}}</span>
                        <span id="dislikes-count" class="ml-1">"ğŸ‘ğŸ» :"{{this.dislikes}}</span>
                    </div>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p>No Locations</p>
    {{/if}}
</div>
